# Google ADK Configuration
# Copy to .env and fill in your values

# =============================================================================
# Model Selection
# =============================================================================

# Default model for ADK agents (options: gemini-2.5-flash, gemini-2.5-pro, gemini-3-pro)
ADK_MODEL=gemini-2.5-flash

# =============================================================================
# Google AI / Gemini
# =============================================================================

# Google AI API Key (for Gemini via AI Studio)
# Get from: https://aistudio.google.com/apikey
GOOGLE_GENAI_API_KEY=

# =============================================================================
# Vertex AI (Enterprise/Production)
# =============================================================================

# Google Cloud Project ID
VERTEX_AI_PROJECT_ID=

# Vertex AI Location (e.g., us-central1, europe-west1)
VERTEX_AI_LOCATION=us-central1

# Path to service account key (optional, uses ADC if not set)
GOOGLE_APPLICATION_CREDENTIALS=

# =============================================================================
# Backend API
# =============================================================================

# Backend API base URL
API_BASE_URL=http://localhost:8000/api

# =============================================================================
# Alternative Models (Optional)
# =============================================================================

# For multi-model support, you can configure:
# - Claude via Anthropic API
# - GPT via OpenAI API

# Anthropic API Key (for Claude fallback)
ANTHROPIC_API_KEY=

# OpenAI API Key (for GPT fallback)
OPENAI_API_KEY=
