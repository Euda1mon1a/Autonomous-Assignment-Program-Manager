            },
            "mappings": [
              {"type": "value", "value": 0, "text": "FAILED"},
              {"type": "value", "value": 1, "text": "PASSED"}
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "textMode": "value"
        }
      },
