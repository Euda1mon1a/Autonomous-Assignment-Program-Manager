{
  "dashboard": {
    "id": null,
    "uid": "resilience-metrics",
    "title": "Resilience Framework Metrics",
    "description": "Detailed resilience monitoring: Defense-in-Depth, N-1/N-2 analysis, load shedding",
    "tags": ["resilience", "healthcare", "contingency"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "1m",
    "time": {
      "from": "now-12h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["30s", "1m", "5m", "15m", "30m", "1h"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": [
        {
          "name": "datasource",
          "type": "datasource",
          "query": "prometheus",
          "current": {
            "value": "Prometheus",
            "text": "Prometheus"
          }
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "h": 10,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "type": "gauge",
        "title": "System Utilization (80% Threshold)",
        "targets": [
          {
            "expr": "resilience_utilization_rate{component=\"overall\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.8, "color": "orange"},
                {"value": 0.9, "color": "red"},
                {"value": 0.95, "color": "dark-red"}
              ]
            }
          },
          "overrides": []
        },
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true,
          "text": {
            "titleSize": 14,
            "valueSize": 32
          }
        },
        "pluginVersion": "9.0.0"
      },
      {
        "id": 2,
        "gridPos": {
          "h": 10,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "type": "stat",
        "title": "Defense Level Status",
        "targets": [
          {
            "expr": "resilience_defense_level",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "min": 1,
            "max": 5,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 1, "color": "green"},
                {"value": 2, "color": "yellow"},
                {"value": 3, "color": "orange"},
                {"value": 4, "color": "red"},
                {"value": 5, "color": "dark-red"}
              ]
            },
            "mappings": [
              {"type": "value", "value": 1, "text": "LEVEL 1: Prevention\n(Proactive Monitoring)"},
              {"type": "value", "value": 2, "text": "LEVEL 2: Detection\n(Early Warning Active)"},
              {"type": "value", "value": 3, "text": "LEVEL 3: Response\n(Load Shedding)"},
              {"type": "value", "value": 4, "text": "LEVEL 4: Recovery\n(Fallback Active)"},
              {"type": "value", "value": 5, "text": "LEVEL 5: Emergency\n(Crisis Mode)"}
            ]
          }
        },
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "textMode": "value"
        }
      },
      {
        "id": 3,
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 10
        },
        "type": "timeseries",
        "title": "Defense Level History (Time Series)",
        "targets": [
          {
            "expr": "resilience_defense_level",
            "refId": "A",
            "legendFormat": "Defense Level"
          },
          {
            "expr": "resilience_utilization_level",
            "refId": "B",
            "legendFormat": "Utilization Level"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "min": 0,
            "max": 5,
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "stepAfter",
              "lineWidth": 3,
              "fillOpacity": 20,
              "showPoints": "always",
              "pointSize": 5
            }
          }
        },
        "options": {
          "tooltip": {
            "mode": "multi"
          },
          "legend": {
            "displayMode": "table",
            "placement": "bottom",
            "calcs": ["lastNotNull", "min", "max"]
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 20
