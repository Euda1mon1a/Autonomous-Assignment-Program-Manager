{
  "mcpServers": {
    "residency-scheduler": {
      "url": "http://127.0.0.1:8080/mcp",
      "transport": "streamable-http"
    },
    "residency-scheduler-stdio": {
      "command": "docker",
      "args": ["compose", "exec", "-T", "-e", "MCP_TRANSPORT=stdio", "mcp-server", "python", "-m", "scheduler_mcp.server"],
      "env": {
        "LOG_LEVEL": "INFO"
      },
      "disabled": true,
      "_comment": "STDIO transport - single client only. Use HTTP for parallel agent access."
    },
    "residency-scheduler-local": {
      "command": "python",
      "args": ["-m", "scheduler_mcp.server"],
      "cwd": "mcp-server/src",
      "env": {
        "API_BASE_URL": "http://localhost:8000",
        "PYTHONPATH": "mcp-server/src",
        "LOG_LEVEL": "INFO"
      },
      "transport": "stdio",
      "disabled": true,
      "_comment": "Local Python STDIO transport for development without Docker."
    }
  }
}
