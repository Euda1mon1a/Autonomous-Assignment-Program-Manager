{
  "mcpServers": {
    "residency-scheduler": {
      "command": "./.claude/bin/mcp-stdio-wrapper.sh",
      "env": {
        "LOG_LEVEL": "INFO"
      },
      "transport": "stdio"
    },
    "residency-scheduler-local": {
      "command": "python",
      "args": ["-m", "scheduler_mcp.server"],
      "cwd": "mcp-server/src",
      "env": {
        "API_BASE_URL": "http://localhost:8000",
        "PYTHONPATH": "mcp-server/src",
        "LOG_LEVEL": "INFO"
      },
      "transport": "stdio",
      "disabled": true
    }
  }
}
