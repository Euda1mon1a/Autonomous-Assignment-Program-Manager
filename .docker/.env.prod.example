# =============================================================================
# Production Environment Configuration
# =============================================================================
# Residency Scheduler - Production deployment
#
# IMPORTANT: Never commit actual secrets to version control
# Copy this file to .env and fill in production values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_USER=scheduler
DB_NAME=residency_scheduler
# Password is stored in secrets file, but can be set here for compose
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# Secret key for JWT - generate with:
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_GENERATE_SECURE_KEY

# Redis password - generate with:
# openssl rand -base64 32
REDIS_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
# Docker image tag
IMAGE_TAG=latest

# Frontend port (80 for HTTP, 443 for HTTPS via reverse proxy)
FRONTEND_PORT=80

# Backend API URL as seen from the frontend
# Use /api for same-origin or full URL for cross-origin
NEXT_PUBLIC_API_URL=/api

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allowed origins (JSON array format)
CORS_ORIGINS=["https://scheduler.example.com"]

# -----------------------------------------------------------------------------
# Data Storage Paths
# -----------------------------------------------------------------------------
# Base directory for persistent data
DATA_DIR=/var/lib/residency-scheduler

# Directory containing secret files
SECRETS_DIR=./secrets

# -----------------------------------------------------------------------------
# Monitoring Configuration (Optional)
# -----------------------------------------------------------------------------
# Sentry DSN for error tracking
SENTRY_DSN=

# -----------------------------------------------------------------------------
# SSL/TLS Configuration (for reverse proxy)
# -----------------------------------------------------------------------------
# Set these if using external reverse proxy
# SSL_CERT_PATH=/etc/ssl/certs/scheduler.crt
# SSL_KEY_PATH=/etc/ssl/private/scheduler.key
