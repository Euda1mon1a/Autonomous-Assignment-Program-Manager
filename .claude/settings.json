{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "claude-sonnet-4-5-20250514",

  "permissions": {
    "allow": [
      "Skill",
      "Task",
      "Read",
      "Glob",
      "Grep",
      "Edit",
      "Write",
      "NotebookEdit",
      "WebFetch",
      "WebSearch",
      "Bash",
      "mcp__*",
      "mcp__residency-scheduler__validate_schedule_tool",
      "mcp__residency-scheduler__validate_schedule_by_id_tool",
      "mcp__residency-scheduler__run_contingency_analysis_tool",
      "mcp__residency-scheduler__detect_conflicts_tool",
      "mcp__residency-scheduler__analyze_swap_candidates_tool",
      "mcp__residency-scheduler__start_background_task_tool",
      "mcp__residency-scheduler__get_task_status_tool",
      "mcp__residency-scheduler__cancel_task_tool",
      "mcp__residency-scheduler__list_active_tasks_tool",
      "mcp__residency-scheduler__check_utilization_threshold_tool",
      "mcp__residency-scheduler__get_defense_level_tool",
      "mcp__residency-scheduler__run_contingency_analysis_resilience_tool",
      "mcp__residency-scheduler__get_static_fallbacks_tool",
      "mcp__residency-scheduler__execute_sacrifice_hierarchy_tool",
      "mcp__residency-scheduler__analyze_homeostasis_tool",
      "mcp__residency-scheduler__calculate_blast_radius_tool",
      "mcp__residency-scheduler__analyze_le_chatelier_tool",
      "mcp__residency-scheduler__analyze_hub_centrality_tool",
      "mcp__residency-scheduler__assess_cognitive_load_tool",
      "mcp__residency-scheduler__get_behavioral_patterns_tool",
      "mcp__residency-scheduler__analyze_stigmergy_tool",
      "mcp__residency-scheduler__check_mtf_compliance_tool",
      "mcp__residency-scheduler__validate_deployment_tool",
      "mcp__residency-scheduler__run_security_scan_tool",
      "mcp__residency-scheduler__run_smoke_tests_tool",
      "mcp__residency-scheduler__promote_to_production_tool",
      "mcp__residency-scheduler__rollback_deployment_tool",
      "mcp__residency-scheduler__get_deployment_status_tool",
      "mcp__residency-scheduler__list_deployments_tool",
      "mcp__residency-scheduler__benchmark_solvers_tool",
      "mcp__residency-scheduler__benchmark_constraints_tool",
      "mcp__residency-scheduler__ablation_study_tool",
      "mcp__residency-scheduler__benchmark_resilience_tool",
      "mcp__residency-scheduler__module_usage_analysis_tool",
      "ListMcpResourcesTool",
      "ReadMcpResourceTool"
    ],

    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.*.local)",
      "Read(.env.prod)",
      "Read(.env.production)",
      "Read(docs/data/*_export.json)",
      "Read(docs/data/*.json)",
      "Read(**/*.dump)",
      "Read(**/*.sql)",
      "Read(**/*.pem)",

      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git push origin main:*)",
      "Bash(git push origin master:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(DROP TABLE:*)",
      "Bash(DROP DATABASE:*)",
      "Bash(TRUNCATE:*)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf .:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)"
    ]
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-bash-validate.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop-verify.sh"
          }
        ]
      }
    ]
  },

  "env": {
    "CLAUDE_PROJECT": "residency-scheduler",
    "CLAUDE_GUARDRAILS": "strict"
  },

  "enableAllProjectMcpServers": true
}
