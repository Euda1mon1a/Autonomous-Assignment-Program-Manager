{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "claude-sonnet-4-5-20250514",

  "permissions": {
    "allow": [
      "Skill",
      "Task",
      "Read",
      "Glob",
      "Grep",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(npm test:*)",
      "Bash(npm run test:*)",
      "Bash(npm run lint:*)",
      "Bash(ruff check:*)",
      "Bash(ruff format:*)",
      "Bash(black:*)",
      "Bash(mypy:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git stash:*)",
      "Bash(docker compose ps:*)",
      "Bash(docker compose logs:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose logs:*)",
      "Bash(curl http://localhost:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(echo:*)",
      "Edit(backend/tests/**)",
      "Edit(frontend/__tests__/**)",
      "Edit(docs/**)",
      "Edit(.antigravity/**)"
    ],
    "ask": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(alembic:*)",
      "Bash(docker compose up:*)",
      "Bash(docker compose down:*)",
      "Bash(docker compose restart:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose down:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Edit(backend/app/core/security.py)",
      "Edit(backend/app/core/config.py)",
      "Edit(backend/app/api/routes/auth.py)",
      "Edit(backend/app/scheduling/acgme_validator.py)",
      "Edit(backend/app/scheduling/engine.py)",
      "Edit(backend/alembic/versions/**)",
      "Edit(docker-compose*.yml)",
      "Edit(Dockerfile*)",
      "Edit(.env*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.*.local)",
      "Read(docs/data/*_export.json)",
      "Read(docs/data/*.json)",
      "Read(**/*.dump)",
      "Read(**/*.sql)",
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(DROP TABLE:*)",
      "Bash(TRUNCATE:*)"
    ]
  },

  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-bash-validate.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop-verify.sh"
          }
        ]
      }
    ]
  },

  "env": {
    "CLAUDE_PROJECT": "residency-scheduler",
    "CLAUDE_GUARDRAILS": "strict"
  },

  "enableAllProjectMcpServers": true
}
