{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "claude-sonnet-4-5-20250514",

  "permissions": {
    "allow": [
      "Skill",
      "Task",
      "Read",
      "Glob",
      "Grep",
      "Edit",
      "Write",
      "NotebookEdit",
      "WebFetch",
      "WebSearch",
      "Bash",
      "mcp__*"
    ],

    "deny": [
      "Read(.env)",
      "Read(.env.local)",
      "Read(.env.*.local)",
      "Read(.env.prod)",
      "Read(.env.production)",
      "Read(docs/data/*_export.json)",
      "Read(docs/data/*.json)",
      "Read(**/*.dump)",
      "Read(**/*.sql)",
      "Read(**/*.pem)",

      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git push origin main:*)",
      "Bash(git push origin master:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean -fd:*)",
      "Bash(DROP TABLE:*)",
      "Bash(DROP DATABASE:*)",
      "Bash(TRUNCATE:*)",
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf .:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(mkfs:*)",
      "Bash(dd if=:*)"
    ]
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-bash-validate.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/stop-verify.sh"
          }
        ]
      }
    ]
  },

  "env": {
    "CLAUDE_PROJECT": "residency-scheduler",
    "CLAUDE_GUARDRAILS": "strict"
  },

  "enableAllProjectMcpServers": true
}
