{
  "mcpServers": {
    "residency-scheduler": {
      "description": "Medical residency scheduling MCP server (HTTP)",
      "url": "http://127.0.0.1:8080/mcp",
      "transport": {
        "type": "http"
      },
      "autoStart": false,
      "features": {
        "resources": true,
        "tools": true,
        "prompts": false
      },
      "security": {
        "readOnly": true,
        "requireApproval": true,
        "allowedPaths": [
          "mcp-server",
          "backend"
        ],
        "phiProtection": true,
        "auditLogging": true
      },
      "metadata": {
        "version": "0.1.0",
        "capabilities": [
          "schedule-validation",
          "acgme-compliance",
          "conflict-detection",
          "contingency-analysis",
          "swap-matching"
        ],
        "healthCheck": {
          "enabled": true,
          "intervalMs": 60000
        }
      }
    }
  },
  "settings": {
    "logLevel": "info",
    "timeout": 30000,
    "retryAttempts": 3,
    "enableMetrics": true
  }
}
